@using Resource = MyResources.User.Resource
@model JudoModelsLibrary.Verantwoordelijke

@{
    ViewBag.Title = Resource.ChangeManager;
}

<h2>@Resource.ChangeManager</h2>

@using (Html.BeginForm("ChangeUser", "User", FormMethod.Post, new { role = "form" }))
{
    <h4>@Resource.ChangeManagerDetails</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.Partial("_ChangesSavedPartial")
    <div class="row">
        <div class="col-md-10">
            <div class="form-group">
                @Html.LabelFor(m => m.Voornaam, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Voornaam, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.Voornaam) })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10">
            <div class="form-group">
                @Html.LabelFor(m => m.Familienaam, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Familienaam, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.Familienaam) })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10">
            <div class="form-group">
                @Html.LabelFor(m => m.Telefoonnummer, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Telefoonnummer, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.Telefoonnummer) })
            </div>
        </div>
    </div>
    <div class="row hidden">
        <div class="col-md-10">
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                @Html.HiddenFor(m => m.Email, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.Email) })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="@Resource.SaveChanges" />
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <input type="button" id="btnCancel" class="btn btn-default" onclick="location.href='@Url.Action("Index", "Manage")';" value="@Resource.Cancel" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
